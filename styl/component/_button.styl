.back-button
  display block
  margin 0 auto
  color white
  font-size 0.9375rem
  text-align center
  line-height 1.5
  position relative
  text-decoration none
  width 5em

  span
    position relative
    z-index 10

  &::after
    content ''
    background rgba(0,0,0,.4)
    transform skew(-15deg,0)
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 5