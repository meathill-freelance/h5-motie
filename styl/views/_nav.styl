#nav
  padding 45vh 1.5em 0

  a
    color: white;
    display: block;
    text-decoration: none;
    line-height: 1.66666;
    position relative
    padding: 0 1em;

    &::before
      content 'â€¢'
      display inline-block
      width 1em

  ul
    padding-left 0

  li
    font-size: 1.125rem;
    list-style none
    position: relative;

    + li
      margin-top .5em

    .bg
      background-color: rgba(0,0,0,.2);
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      transform: skew(-15deg,0);

    &:first-child
      width 8em

    &:nth-child(2)
      width 11.5em

    &:nth-child(3)
      width 13em

    &:nth-child(4)
      width 9em

    for n in 1..4
      &:nth-child({n})
        animation-delay .2s * (n - 1)

    @media (min-width 360px) and (max-width 374px)
      &
        font-size 1.25rem
        line-height 2

    @media (min-width 375px)
      &
        font-size 1.35rem
        line-height 2