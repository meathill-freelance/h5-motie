#ip100
  color white

  article
    flex 1 1

  h2
    position: absolute
    top 2rem
    right 1rem
    background-color: #15816e;
    width: 60px;
    height: 259px;
    display: flex;
    justify-content: center;
    align-items: center
    box-shadow 0 8px 8px 4px rgba(0,0,0,.3)
    margin 0

    img
      width 24px

  ul
    background no-repeat left top/cover
    margin 2rem 0 0
    padding 3em 2.5em 0
    width 296px
    height 416px

  li
    display none
    font-size 1.2rem
    font-weight 200
    line-height 1.75
    list-style none

    for n in 1..10
      &:nth-child({n})
        animation-delay .2s * n

    &.animated
      display list-item

  p
    display none
    text-align: center;
    font-size: 1.5rem;
    transform: rotate(-3deg);
    font-style: italic
    font-weight 500
    margin: 0
    padding-left 2.5em
    text-indent -5em

    &.animated
      display block

  @media (min-width 321px)
    &
      h2
        top 3rem

      ul
        margin 3rem 0 0 1.25em

      p
        margin 1em 0 0

  @media (min-width 375px)
    &
      ul
        margin 3rem 0 0 1.7em