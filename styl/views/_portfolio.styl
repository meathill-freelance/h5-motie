#portfolio
  color white

  header
    background-color #2a2c3e
    color white
    margin-top 1.875rem

  nav
    display: flex
    width: 70%
    margin: 0 auto

  .nav-item
    width: 10em
    text-align: center
    line-height: 2.5rem
    font-size: .875rem
    position relative

    span
      position relative
      z-index 5

    &.active::after
      background-color #e00a17
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 0
      transform skew(-15deg,0)

  .swiper-container
    flex 1 1
    width: 100%;
    margin 14px 0

  .swiper-slide
    font-size: 11px;
    width: 72vw;
    display: flex;
    flex-direction column
    justify-content: flex-start
    align-items: center

  h3,p
    margin 0
    display none

  .swiper-slide-active
    h3,p
      display block

  h3
    font-size .875rem
    line-height 3em

  img
    width 60vw