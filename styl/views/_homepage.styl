#home
  display flex
  flex-direction column

  img
    display block

  p
    text-align center
    margin-bottom 1rem

  i
    color white

  header
    position fixed
    top 0
    left 0
    right 0

    img
      margin 11vw auto 0
      width 48.4375vw

  div
    flex 1 1
    display flex
    justify-content center
    align-items center

    img
      width 86.5625vw
      margin 18vw 0 0 1.4375vw

  footer img
    margin 0 auto 4.5vw
    width 90.9375vw

  &.slideUp
    transition all .4s